# -- UI --

theme = GitHub-Dark-Default 
font-size = 16
font-feature = -liga, -calt, -dlig
cursor-style = block
cursor-style-blink = true
shell-integration-features = no-cursor
background-opacity = 0.9
background-blur = 10
window-position-x = 0
window-position-y = 0
window-padding-x = 10
window-padding-y = 5
window-width = 9999
window-height = 25
macos-titlebar-style = tabs
confirm-close-surface = false


# -- Keybinds --

## Global Keybinds
keybind = global:opt+space=toggle_visibility

## Pane Management
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right
keybind = ctrl+z=toggle_split_zoom
keybind = ctrl+w=close_surface
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+shift+j=new_split:down

