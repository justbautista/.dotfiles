{
	// Core UI
	"workbench.startupEditor": "none",
	"window.newWindowProfile": "Default",
	"workbench.editor.showTabs": "single",
	"workbench.colorTheme": "Material Theme Ocean High Contrast",
	"explorer.confirmDelete": false,
	"files.autoSave": "afterDelay",
	"editor.fontFamily": "Jetbrains Mono NL",
	"editor.fontSize": 14,
	"editor.tabSize": 4,
	"editor.lineNumbers": "relative",
	"workbench.iconTheme": "eq-material-theme-icons-ocean",

	// Sidebar & Layout
	"explorer.compactFolders": false,
	"workbench.tree.indent": 12,
	"workbench.sideBar.location": "right",
	"workbench.activityBar.location": "top",

	// Editor Behavior
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.lightbulb.enabled": "off",
	"editor.quickSuggestions": {
		"other": "on",
		"comments": "off",
		"strings": "on"
	},

	// Bracket & Guides
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",

	// Minimap
	"editor.minimap.enabled": false,
	"editor.minimap.autohide": true,
	"editor.minimap.renderCharacters": false,

	// Terminal
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.fontFamily": "MesloLGS NF",
	"terminal.integrated.inheritEnv": false,
	"workbench.panel.showLabels": false,

	// Language-Specific Settings
	"[javascript][javascriptreact][typescript][typescriptreact][yaml][css][scss][html][json][jsonc][jsonl][markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit",
			"source.fixAll": "explicit"
		}
	},
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff",
		"editor.codeActionsOnSave": {
			"source.organizeImports.ruff": "explicit",
			"source.fixAll.ruff": "explicit"
		}
	},
	"python.analysis.autoImportCompletions": true,
	"python.terminal.activateEnvironment": true,

	// Files
	"files.associations": {
		"*.scss": "postcss"
	},
	"files.exclude": {
		"**/__pycache__": true
	},

	// Breadcrumbs
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showConstructors": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showEnums": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showInterfaces": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showModules": false,
	"breadcrumbs.showNamespaces": false,
	"breadcrumbs.showNull": false,
	"breadcrumbs.showNumbers": false,
	"breadcrumbs.showObjects": false,
	"breadcrumbs.showOperators": false,
	"breadcrumbs.showPackages": false,
	"breadcrumbs.showProperties": false,
	"breadcrumbs.showStrings": false,
	"breadcrumbs.showStructs": false,
	"breadcrumbs.showTypeParameters": false,
	"breadcrumbs.showVariables": false,

	// Git
	"git.timeline.showAuthor": false,
	"git.confirmSync": false,
	"gitlens.codeLens.authors.enabled": false,
	"gitlens.codeLens.recentChange.enabled": false,

	// Jupyter & Notebook
	"notebook.output.scrolling": true,
	"notebook.output.wordWrap": true,
	"notebook.breadcrumbs.showCodeCells": false,
	"jupyter.askForKernelRestart": false,

	// Vim
	"vim.useSystemClipboard": true,
	"vim.smartRelativeLine": true,
	"vim.highlightedyank.enable": true,
	"vim.highlightedyank.duration": 250,
	"vim.leader": "<space>",
	"vim.handleKeys": {
		"<space>": true
	},
	"vim.normalModeKeyBindingsNonRecursive": [
		// Vim bindings
		{
			// Switch between recent tabs (like alt-tab)
			"before": ["<tab>"],
			"after": ["<C-6>"]
		},
		{
			// Scroll down and center the cursor
			"before": ["<C-d>"],
			"after": ["<C-d>", "z", "z"]
		},
		{
			// Scroll up and center the cursor
			"before": ["<C-u>"],
			"after": ["<C-u>", "z", "z"]
		},

		// Vscode bingings
		// Navigation
		{
			// Move to left editor
			"before": ["<leader>", "h"],
			"commands": ["workbench.action.navigateLeft"]
		},
		{
			// Move to down editor
			"before": ["<leader>", "j"],
			"commands": ["workbench.action.navigateDown"]
		},
		{
			// Move to up editor
			"before": ["<leader>", "k"],
			"commands": ["workbench.action.navigateUp"]
		},
		{
			// Move to right editor
			"before": ["<leader>", "l"],
			"commands": ["workbench.action.navigateRight"]
		},
		{
			// Split left
			"before": ["<leader>", "<S-l>"],
			"commands": ["workbench.action.splitEditorRight"]
		},
		{
			// Split down
			"before": ["<leader>", "<S-j>"],
			"commands": ["workbench.action.splitEditorDown"]
		},
		{
			// Open explorer
			"before": ["<leader>", "e"],
			"commands": ["workbench.view.explorer"]
		},

		// Layout management
		{
			// Wipe (close) sidebar
			"before": ["<leader>", "w", "s"],
			"commands": ["workbench.action.closeSidebar"]
		},
		{
			// Wipe secondary bar
			"before": ["<leader>", "w", "a"],
			"commands": ["workbench.action.closeAuxiliaryBar"]
		},
		{
			// Wipe panel
			"before": ["<leader>", "w", "p"],
			"commands": ["workbench.action.closePanel"]
		},

		// Search and files
		{
			// Search open editors
			"before": ["<leader>", ","],
			"commands": ["workbench.action.showAllEditors"]
		},
		{
			// Search files in workspace
			"before": ["<leader>", "<leader>"],
			"commands": ["workbench.action.quickOpen"]
		},
		{
			// Search text in workspace files
			"before": ["<leader>", "<S-f>"],
			"commands": ["workbench.action.findInFiles"]
		},
		{
			// Search text in current file
			"before": ["<leader>", "f"],
			"commands": ["actions.find"]
		},

		// Git
		{
			// Open source control (git)
			"before": ["<leader>", "g"],
			"commands": ["workbench.view.scm"]
		},

		// Commands and settings
		{
			// Open command palette
			"before": ["<leader>", "c", "p"],
			"commands": ["workbench.action.showCommands"]
		},
		{
			// Reload window
			"before": ["<leader>", "c", "r"],
			"commands": ["workbench.action.reloadWindow"]
		},

		// Editing
		{
			// Comment
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		},

		// AI assistance
		{
			// Open chat
			"before": ["<leader>", "i", "a"],
			"commands": ["workbench.action.chat.open"]
		},
		{
			// Open inline chat
			"before": ["<leader>", "i", "l"],
			"commands": ["inlineChat.start"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		// Vim bindings
		{
			// Paste replace
			"before": ["<leader>", "p"],
			"after": ["\"", "_", "d", "P"]
		},

		// Vscode bindings
		{
			// Comment
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		},
		{
			// Search text in workspace files
			"before": ["<leader>", "<S-f>"],
			"commands": ["workbench.action.findInFiles"]
		},
		{
			// Search text in current file
			"before": ["<leader>", "f"],
			"commands": ["actions.find"]
		}
	],

	// Extensions & Plugins
	"prettier.requireConfig": false,
	"evenBetterToml.formatter.allowedBlankLines": 1,
	"postman.settings.dotenv-detection-notification-visibility": false,
	"supermaven.otherWarning": false
}
